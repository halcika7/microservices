{
  "name": "@services/auth",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "clean": "rimraf dist && mkdir dist",
    "build": "npm-run-all clean build:types build:js copy-static-assets",
    "build:types": "tsc -p tsconfig.prod.json --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "copy-static-assets": "ts-node copy-static.ts",
    "lint": "eslint . --ext .ts --fix --ignore-path ../../.eslintignore",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "test": "jest --runInBand --no-cache",
    "test:coverage": "yarn test --coverage --detectOpenHandles"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@types/shelljs": "^0.8.10",
    "@types/supertest": "^2.0.11",
    "better-docs": "^2.3.2",
    "jest": "^27.4.5",
    "jsdoc": "^3.6.7",
    "mongodb-memory-server": "^8.1.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/runtime": "^7.16.5",
    "@packages/common-backend": "1.0.0",
    "@packages/errors": "1.0.0",
    "@packages/logger": "1.0.0",
    "babel-plugin-root-import": "^6.6.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "mongoose": "^6.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": false,
    "testMatch": [
      "**/*.test.ts"
    ],
    "setupFiles": [
      "<rootDir>/jest/env.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/types/**",
      "!src/models/**",
      "!src/routes/index.ts",
      "!src/index.ts"
    ]
  }
}
