{
  "name": "@packages/common-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "build:watch": "yarn build --watch",
    "lint": "eslint . --ext .ts --fix --ignore-path ../../.eslintignore",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "test": "jest --runInBand",
    "test:coverage": "yarn test --coverage --detectOpenHandles",
    "doc": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "@packages/errors": "1.0.0",
    "@packages/logger": "1.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.4",
    "better-docs": "^2.3.2",
    "jest": "^27.4.5",
    "jsdoc": "^3.6.7"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": false,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupFiles": [
      "<rootDir>/jest/env.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/types/**",
      "!src/middleware/index.ts",
      "!src/lib/mongodb.ts",
      "!src/lib/index.ts",
      "!src/index.ts"
    ]
  }
}
